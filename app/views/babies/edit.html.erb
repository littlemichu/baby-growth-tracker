<h1>Editing baby</h1>
 
<%= form_for :baby, url: baby_path(@baby), method: :patch do |f| %>
 
  <% if @baby.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@baby.errors.count, "error") %> prohibited
        this baby from being saved:
      </h2>
      <ul>
        <% @baby.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, :required => true %>
  </p>
 
  <p>
    <%= f.label :height %><br>
    <%= f.number_field :height, :class => 'text_field', :step => 'any', :required => true %>
    <%= f.select :height_unit, options_for_select(["cm", "in"]), :class => 'genForm_dropBox' %>
  </p>
 
  <p>
    <%= f.label :weight %><br>
    <%= f.number_field :weight, :class => 'text_field', :step => 'any', :required => true %>
    <%= f.select :weight_unit, options_for_select(["kg", "lb"]), :class => 'genForm_dropBox' %>
  </p>
  
  <p>
    <%= f.label :temperature %><br>
    <%= f.number_field :temperature, :class => 'text_field', :step => 'any', :required => true %>
    <%= f.select :temperature_unit, options_for_select(["°C", "°F"]), :class => 'genForm_dropBox' %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', babies_path %>